<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <com.hadilo.spinnertextinputlayout.widget.spinner.SpinnerTextInputLayout
        android:id="@+id/spinner_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_black_24"
            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_black_24"
            android:singleLine="true"
            android:hint="Gender" />

        <!--style="?attr/spinnerDropDownItemStyle"-->

    </com.hadilo.spinnertextinputlayout.widget.spinner.SpinnerTextInputLayout>

    <com.hadilo.spinnertextinputlayout.widget.spinner.SpinnerTextInputLayout
        android:id="@+id/spinner_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_black_24"
            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_black_24"
            android:singleLine="true"
            android:hint="Color" />

        <!--style="?attr/spinnerDropDownItemStyle"-->

    </com.hadilo.spinnertextinputlayout.widget.spinner.SpinnerTextInputLayout>

</LinearLayout>